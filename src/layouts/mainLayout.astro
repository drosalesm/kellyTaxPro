---
import Header from '../components/header.astro';
import Main from '../components/main.astro';
import Footer from '../components/footer.astro';

// Import CSS files
import '../assets/vendor/bootstrap/css/bootstrap.min.css';
import '../assets/vendor/bootstrap-icons/bootstrap-icons.css';
import '../assets/vendor/aos/aos.css';
import '../assets/vendor/glightbox/css/glightbox.min.css';
import '../assets/vendor/swiper/swiper-bundle.min.css';
import '../styles/main.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>Kelly Tax Pro</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link rel="icon" href="/assets/img/favicon.png">
  <link rel="apple-touch-icon" href="/assets/img/apple-touch-icon.png">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect">
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Montserrat:wght@400;700&family=Poppins:wght@400;700&display=swap" rel="stylesheet">

</head>
<body class="index-page">
  <Header />
  <Main />
  <Footer />  
 

  <!-- Main content -->
  <main>
    <slot />
  </main>



  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
  </a>

  <!-- Preloader -->
  <div id="preloader"></div>

  <!-- Vendor JS Files -->
  <script src="src/assets/vendor/bootstrap/js/bootstrap.bundle.min.js" defer></script>
  <script src="src/assets/vendor/php-email-form/validate.js" defer></script>
  <script src="src/assets/vendor/aos/aos.js" defer></script>
  <script src="src/assets/vendor/glightbox/js/glightbox.min.js" defer></script>
  <script src="src/assets/vendor/swiper/swiper-bundle.min.js" defer></script>
  <script src="src/assets/vendor/purecounter/purecounter_vanilla.js" defer></script>
  <script src="src/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js" defer></script>
  <script src="src/assets/vendor/isotope-layout/isotope.pkgd.min.js" defer></script>

  <!-- Main JS File -->
  <script src="src/assets/js/main.js" defer></script>
</body>
</html>
